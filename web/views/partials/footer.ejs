<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <h2><%= text.footer.contact_us %></h2>
                <p>
                    <%= text.footer.executive_committee %><br>
                    <% text.footer.executive_committee_members.forEach(function(member) { %>
                    <%= member %><br>
                    <% }) %>
                    <br>
                    <% text.footer.locations.forEach(function(location) { %>
                    <%= location %><br>
                    <% }) %>
                    <br>
                    <%= text.footer.postal_address %><br>
                    <%- text.footer.postal_address_actual %><br>
                </p>
                <div class="media-links">
                    <a href="https://www.facebook.com/sturauhasselt"><img src="/assets/img/ionicons/social-facebook.svg" alt="Facebook Link"/></a>
                    <a href="https://www.instagram.com/sturauhasselt/"><img src="/assets/img/ionicons/social-instagram.svg" alt="Instagram Link"/></a>
                    <!-- <a href="https://www.youtube.com/user/sturauhasselt"><img src="/assets/img/ionicons/social-youtube.svg" alt="YouTube Link"/></a> -->
                    <!-- <a href="https://twitter.com/sturauhasselt"><img src="/assets/img/ionicons/social-twitter.svg" alt="Twitter Link"/></a> -->
                    <a href="https://www.linkedin.com/company/student-council-university-of-hasselt/"><img src="/assets/img/ionicons/social-linkedin.svg" alt="LinkedIn Link"/></a>
                    <a href="mailto:stura@uhasselt.be"><img src="/assets/img/ionicons/social-mail.svg" alt="Mail Link" /></a>
                </div>
            </div>
            <div class="col-lg-6">
                <iframe id="streetmap" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"
                    src="https://www.openstreetmap.org/export/embed.html?bbox=5.386723279953004%2C50.923924860557676%2C5.3956711292266855%2C50.92693089029205&amp;layer=mapnik"
                    ></iframe>
            </div>
        </div>
    </div>
</section>

<script src="/assets/js/jquery-3.3.1.min.js"></script>
<script src="/assets/js/bootstrap.min.js"></script>

